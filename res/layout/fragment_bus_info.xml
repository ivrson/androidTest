<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.androidtest.BusInfoActivity$PlaceholderFragment" >
     
    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="새로고침" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Bus 정보"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tx_routeNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:text="노선번호" />

    <TextView
        android:id="@+id/tx_plainNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tx_routeNo"
        android:layout_below="@+id/tx_routeNo"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:text="차량번호" />

    <TextView
        android:id="@+id/tx_stationNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tx_plainNo"
        android:layout_below="@+id/tx_plainNo"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:text="역이름" />

    <TextView
        android:id="@+id/tx_isStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tx_stationNo"
        android:layout_below="@+id/tx_stationNo"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:text="정차여부" />

    <TextView
        android:id="@+id/tx_getTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tx_isStop"
        android:layout_below="@+id/tx_isStop"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:text="제공 시간" >
    </TextView>

</RelativeLayout>